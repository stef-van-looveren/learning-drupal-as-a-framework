<a href="{{ path('entity.offer.canonical', {'offer': offer.id()}) }}" {{ attributes.addClass('offer-teaser') }}>
  {% if offer.getPromoText() %}
    <div class="badge">{{ offer.getPromoText() }}</div>
  {% endif %}
  <div class="product-thumb">
    {{ content.field_image }}
  </div>
  <div class="product-details">
    <h4>{{ offer.label() }}</h4>
    <p>0 bids</p>
    <div class="product-bottom-details">
      <div class="product-price">{{ offer.getPriceAmount() }}</div>
    </div>
  </div>
</a>
